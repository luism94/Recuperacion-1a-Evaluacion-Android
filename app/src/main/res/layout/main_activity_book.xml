<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/title_page_book"
            android:layout_width="@dimen/book_title_page_width"
            android:layout_height="0dp"
            android:contentDescription="@string/title_page_book"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="h,3:4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/book_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:text="Ofrenda a la tormenta añsdjlk falñksjd  fhlkjasdhflka shdflkahdf xljkdjfhhskjdh ajfdhlkajdfh asjfhalks"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/title_page_book"
            app:layout_constraintEnd_toStartOf="@+id/book_year"
            app:layout_constraintStart_toEndOf="@+id/title_page_book"
            app:layout_constraintTop_toTopOf="@+id/title_page_book"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/book_author"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        tools:text="Dolores Redondo"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_page_book"
        app:layout_constraintEnd_toEndOf="@+id/book_title"
        app:layout_constraintHorizontal_bias="0.0"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@+id/book_title"
        app:layout_constraintTop_toBottomOf="@+id/book_title" />

        <TextView
            android:id="@+id/book_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            tools:text="2014"
            android:padding="2dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>